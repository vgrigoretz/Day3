@model  WebApplication.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    @using (var form = Html.BeginForm("Delete", "User", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(p => p.Name)
            @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Surname)
            @Html.TextBoxFor(p => p.Surname, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Surname)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.EmployDate)
            @Html.TextBoxFor(p => p.EmployDate, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.EmployDate)
        </div>
        <div class="form-group">
            <input class="btn btn-danger" type="submit" value="Delete" />
        </div>
    }
</p>